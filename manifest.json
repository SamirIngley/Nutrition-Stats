{
    "manifest_version": 2,
    "name": "Nutrition Stats",
    "version": "1.0",
    "description": "This extension tracks your cart's nutrition facts.",
    "icons": {
        "128": "icon128.png",
        "48": "icon48.png",
        "16": "icon16.png"
    },

    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popupED.html"
    },
    
    "content_security_policy":"script-src 'self' https://api.edemam.com; object-src 'self'",

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "permissions": [
        "storage",
        "notifications"
    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "templates/script.js",
                "content.js"
            ],
            "css": ["templates/styles.css"]
        }
    ],

    "options_page" : "options.html"


}